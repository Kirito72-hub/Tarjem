{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Path mapping */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@components/*": [
                "./components/*"
            ],
            "@lib/*": [
                "./lib/*"
            ]
        },
        /* Type definitions */
        "types": [
            "node",
            "vite/client"
        ]
    },
    "include": [
        "src/**/*",
        "components/**/*",
        "lib/**/*",
        "electron/**/*",
        "types.ts",
        "App.tsx",
        "index.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-electron"
    ]
}